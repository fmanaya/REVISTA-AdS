<html>
	<head>
		<meta charset="utf-8">
		<link href="/favicon.ico" rel="shortcut icon">
		<title><%= @document.title %> | <%= @site.title %></title>
		<%- @getBlock("meta").toHTML() %>
		<%- @getBlock("styles").add(["/styles/style.css"]).toHTML() %>
		<%- @getBlock("scripts").add(["/vendor/jquery.js", "/vendor/jquery.collagePlus.min.js", "/scripts/script.js"]).toHTML() %>
	</head>
	<body>
		<!-- http://uniondesign.ca/simple-accordion-without-jquery-ui/ -->
		<div id="accordion">
		<h1 class="nrorev accordion-toggle">171</h1>
		<ul class="accordion-content">
			<% for page in @getSorted(171).toJSON(): %>
				<li class="<%= if page.id is @document.id then 'active' else 'inactive' %>">
					<a href="<%= page.url %>">
						<%= page.title %>
					</a>
				</li>
			<% end %>
		</ul>
		<h1 class="nrorev accordion-toggle">172</h1>
		<ul class="accordion-content">
			<% for page in @getSorted(172).toJSON(): %>
				<li class="<%= if page.id is @document.id then 'active' else 'inactive' %>">
					<a href="<%= page.url %>">
						<%= page.title %>
					</a>
				</li>
			<% end %>
		</ul>
		<h1 class="nrorev accordion-toggle">173</h1>
		<ul class="accordion-content default">
			<% for page in @getSorted(173).toJSON(): %>
				<li class="<%= if page.id is @document.id then 'active' else 'inactive' %>">
					<a href="<%= page.url %>">
						<%= page.title %>
					</a>
				</li>
			<% end %>
		</ul>	
		<h1 class="nrorev accordion-toggle">999</h1>
		<ul class="accordion-content">
			<% for page in @getSorted(999).toJSON(): %>
				<li class="<%= if page.id is @document.id then 'active' else 'inactive' %>">
					<a href="<%= page.url %>">
						<%= page.title %> PRUEBAS
					</a>
				</li>
			<% end %>
		</ul>
		</div>
		<hr/>
		
		
		<div id="one">
			<article>
				<header>
			    	<h1><%= @document.title %></h1>
		            <p><%= @document.subtitle %></p>
					<p><strong><%= @document.autor %></strong></p>
			    </header>
			    <section>
					<%- @content %>
			    </section>
			</article>
			
		</div>
		<div id="two">
		</div>
		
		
		<%- @getBlock("scripts").toHTML() %>
	</body>
</html>

